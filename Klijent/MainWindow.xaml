<Window x:Class="Klijent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klijent"
        mc:Ignorable="d"
        Title="Chat"
        Height="650"
        Width="1200"
        Background="#101011"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False" Loaded="Window_Loaded">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#101011"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#070708"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#161717"/>
        <SolidColorBrush x:Key="ChatBackground" Color="#1f2021"/>

        <SolidColorBrush x:Key="PanelBorderBrush" Color="#292a2b"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#303332"/>
        <SolidColorBrush x:Key="AccentStrongBrush" Color="#3b3e3d"/>

        <SolidColorBrush x:Key="TextOnDark" Color="#f0f6f0"/>
        <SolidColorBrush x:Key="TextOnMedium" Color="#c4cbc4"/>
        <SolidColorBrush x:Key="TextMuted" Color="#8a8f8a"/>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22f0f6f0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33f0f6f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IncomingBubble" TargetType="Border">
            <Setter Property="Background" Value="#202223"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>

        <Style x:Key="OutgoingBubble" TargetType="Border">
            <Setter Property="Background" Value="#2b2d2e"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource TitleBarBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0">
                    <TextBlock Text="Chat Klijent"
                               Foreground="{StaticResource TextOnDark}"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  |  Mono Dark"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="MinimizeButton_Click"
                        Content="&#x2013;"/>

                <Button Grid.Column="2"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="MaximizeButton_Click"
                        Content="&#x25A1;"/>

                <Button Grid.Column="3"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="CloseButton_Click"
                        Content="X"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource SidebarBackground}"
                    BorderBrush="{StaticResource PanelBorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- SEARCH BAR -->
                    <Border Grid.Row="0"
                            Background="#202120"
                            CornerRadius="6"
                            Padding="4"
                            Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchTextBox"
                                     Grid.Column="0"
                                     Margin="4,0,4,0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextOnDark}"
                                     CaretBrush="{StaticResource TextOnDark}"
                                     FontSize="12"
                                     Text=""/>

                            <Button Grid.Column="1"
                                    Click="SearchButton_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Width="28"
                                    Height="24"
                                    Cursor="Hand">
                                <TextBlock Text="🔍"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMuted}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>

                    <TextBlock Grid.Row="1"
                               Text="Razgovori"
                               Foreground="{StaticResource TextOnMedium}"
                               FontWeight="SemiBold"
                               Margin="2,0,0,4"/>

                    <ListBox x:Name="Kontakti"
                     Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="{StaticResource TextOnDark}"
                             SelectionChanged="Kontakti_SelectionChanged">  
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Background="{StaticResource ChatBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="56"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#191a1b"
                            BorderBrush="{StaticResource PanelBorderBrush}"
                            BorderThickness="0,0,0,1">
                        <DockPanel Margin="12,0">
                            <StackPanel Orientation="Vertical"
                                        DockPanel.Dock="Left"
                                        VerticalAlignment="Center">
                                <TextBlock x:Name="user"
                                    Text="General"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextOnDark}"/>
                                <TextBlock Text="Online"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1"
                                  Background="{StaticResource ChatBackground}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PorukePanel" Margin="12,8,12,8">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,2">
                                <Border Style="{StaticResource IncomingBubble}">
                                    <TextBlock Text="Ćao, dobrodošao u dark mono chat demo."
                                               Foreground="{StaticResource TextOnMedium}"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,2">
                                <Border Style="{StaticResource OutgoingBubble}">
                                    <TextBlock Text="Testiram da li se prozor i crni layout ponašaju glatko."
                                               Foreground="{StaticResource TextOnDark}"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,2">
                                <Border Style="{StaticResource IncomingBubble}">
                                    <TextBlock Text="Ako je pomeranje i resize bez trzanja, onda si miran što se WPF UI-a tiče."
                                               Foreground="{StaticResource TextOnMedium}"
                                               TextWrapping="Wrap"
                                               Width="320"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2"
                            Background="#181919"
                            BorderBrush="{StaticResource PanelBorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="messageText"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"
                                     Height="36"
                                     VerticalContentAlignment="Center"
                                     Background="#101111"
                                     Foreground="{StaticResource TextOnDark}"
                                     BorderBrush="{StaticResource AccentStrongBrush}"
                                     BorderThickness="1"
                                     Padding="8,0"
                                     FontSize="13"
                                     Text=""/>

                            <Button x:Name="Send"
                                    Grid.Column="1"
                                    Content="Pošalji"
                                    Height="36"
                                    MinWidth="80"
                                    Background="{StaticResource AccentStrongBrush}"
                                    Foreground="{StaticResource TextOnDark}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="Send_Click" Margin="0,2,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
