<Window x:Class="Klijent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Chat"
        Height="650"
        Width="1200"
        Background="#101011"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        MaxWidth="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}"
        MaxHeight="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}"

        Loaded="Window_Loaded">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#101011"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#070708"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#161717"/>
        <SolidColorBrush x:Key="ChatBackground" Color="#1f2021"/>

        <SolidColorBrush x:Key="PanelBorderBrush" Color="#292a2b"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#303332"/>
        <SolidColorBrush x:Key="AccentStrongBrush" Color="#3b3e3d"/>

        <SolidColorBrush x:Key="TextOnDark" Color="#f0f6f0"/>
        <SolidColorBrush x:Key="TextOnMedium" Color="#c4cbc4"/>
        <SolidColorBrush x:Key="TextMuted" Color="#8a8f8a"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#26262A"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#F0F6F0"/>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22f0f6f0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33f0f6f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarModeRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1FFFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextOnMedium}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentStrongBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentStrongBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IncomingBubble" TargetType="Border">
            <Setter Property="Background" Value="#202223"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>

        <Style x:Key="OutgoingBubble" TargetType="Border">
            <Setter Property="Background" Value="#2b2d2e"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>

        <SolidColorBrush x:Key="UiText" Color="#E6E6E6"/>
        <SolidColorBrush x:Key="UiBorder" Color="#2A2A2C"/>
        <SolidColorBrush x:Key="UiBtnBg" Color="#1C1C1E"/>
        <SolidColorBrush x:Key="UiBtnHover" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="UiBtnPressed" Color="#3A3A3C"/>

        <Style x:Key="CircleActionButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource UiText}"/>
            <Setter Property="Background" Value="{StaticResource UiBtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource UiBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource UiBtnHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource UiBtnPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentStrongBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentStrongBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#4A4A4F"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#4A4A4F"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource TitleBarBackground}"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0">
                    <TextBlock Text="Chat Klijent"
                               Foreground="{StaticResource TextOnDark}"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  |  Mono Dark"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="MinimizeButton_Click"
                        Content="&#x2013;"/>

                <Button Grid.Column="2"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="MaximizeButton_Click"
                        Content="&#x25A1;"/>

                <Button Grid.Column="3"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        Style="{StaticResource WindowButtonStyle}"
                        Click="CloseButton_Click"
                        Content="X"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource SidebarBackground}"
                    BorderBrush="{StaticResource PanelBorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#202120"
                            CornerRadius="6"
                            Padding="4"
                            Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchTextBox"
                                     Grid.Column="0"
                                     Margin="4,0,4,0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextOnDark}"
                                     CaretBrush="{StaticResource TextOnDark}"
                                     FontSize="12"
                                     Text=""/>

                            <Button Grid.Column="1"
                                    Click="SearchButton_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Width="28"
                                    Height="24"
                                    Cursor="Hand">
                                <TextBlock Text="🔍"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMuted}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton x:Name="RazgovoriBtn"
                                     Grid.Column="0"
                                     GroupName="SidebarMode"
                                     Style="{StaticResource SidebarModeRadioStyle}"
                                     Content="Razgovori"
                                     IsChecked="True"
                                     Margin="0,0,6,0"
                                     Click="Razgovori_Click"/>

                        <RadioButton x:Name="PrijateljiBtn"
                                     Grid.Column="1"
                                     GroupName="SidebarMode"
                                     Style="{StaticResource SidebarModeRadioStyle}"
                                     Content="Prijatelji"
                                     Margin="6,0,0,0"
                                     Click="PrijateljiBtn_Click"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="19*"/>
                        </Grid.ColumnDefinitions>

                        <ListBox x:Name="Kontakti"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{StaticResource TextOnDark}"
                                 SelectionChanged="Kontakti_SelectionChanged"
                                 Grid.ColumnSpan="2"/>

                        <ListBox x:Name="Prijatelji"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch"
                                 Foreground="{StaticResource TextOnDark}"
                                 Grid.ColumnSpan="2"
                                 Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Background="{StaticResource ChatBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="56"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#191a1b"
                            BorderBrush="{StaticResource PanelBorderBrush}"
                            BorderThickness="0,0,0,1">
                        <DockPanel Margin="12,0">
                            <StackPanel Orientation="Vertical"
                                        DockPanel.Dock="Left"
                                        VerticalAlignment="Center">
                                <TextBlock x:Name="user"
                                           Text=""
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextOnDark}"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1"
                                  Background="{StaticResource ChatBackground}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PorukePanel" Margin="12,8,12,8"/>
                    </ScrollViewer>

                    <Border Grid.Row="2"
                            Background="#181919"
                            BorderBrush="{StaticResource PanelBorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="messageText"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"
                                     Height="36"
                                     VerticalContentAlignment="Center"
                                     Background="#101111"
                                     Foreground="{StaticResource TextOnDark}"
                                     BorderBrush="{StaticResource AccentStrongBrush}"
                                     BorderThickness="1"
                                     Padding="8,0"
                                     FontSize="13"
                                     Text=""/>

                            <Button x:Name="Send"
                                    Grid.Column="1"
                                    Content="Pošalji"
                                    Height="36"
                                    MinWidth="80"
                                    Background="{StaticResource AccentStrongBrush}"
                                    Foreground="{StaticResource TextOnDark}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="Send_Click"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Top"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
